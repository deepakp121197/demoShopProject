pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK17'
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/deepakp121197/demoShopProject.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Execute Tests') {
            steps {
                bat 'mvn clean test'
            }
        }
    }

    post {
    always {
        junit '*/target/surefire-reports/.xml'

        allure includeProperties: false,
               jdk: '',
               results: [[path: 'target/allure-results']]
    }
}

}